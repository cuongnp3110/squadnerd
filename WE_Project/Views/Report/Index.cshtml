@model IEnumerable<WE_Project.Models.department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <div class="card mb-4" style="padding:0px 20px">
            <div class="card-body">
                @if (Convert.ToInt32(Session["state"].ToString()) <= 2)
                {
                    <div class="col-md-6">
                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseSort" aria-expanded="true"
                           aria-controls="collapseSort">
                            <i class="fa-solid fa-arrow-down-short-wide"></i>
                            <span>@ViewBag.sort</span>
                        </a>
                        <div id="collapseSort" class="collapse" aria-labelledby="headingTable" data-parent="#accordionSidebar">
                            <div class="bg-white py-2 collapse-inner rounded">
                                <a class="collapse-item" href="@Url.Action("Index", "Report",  new { id= 0 })">All</a>&emsp;
                                @foreach (var item in Model)
                                {
                                    <a class="collapse-item" href="@Url.Action("Index", "Report",  new { id= item.department_id })">@item.department_name</a> <span>&emsp;</span>
                                }
                            </div>
                        </div>
                    </div>
                }


                <div id="CategoryPoints" style="height: 300px; margin-bottom:10px ; box-shadow: 0px 4px 8px 0px rgba(64,64,64,0.5); border: 1px solid #F5F5F5;"></div>
                <div id="topViews" style="height: 300px; margin-bottom: 10px; box-shadow: 0px 4px 8px 0px rgba(64,64,64,0.5); border: 1px solid #F5F5F5; "></div>
                <div id="topPopulars" style="height: 300px; box-shadow: 0px 4px 8px 0px rgba(64,64,64,0.5); border: 1px solid #F5F5F5;"></div>

            </div>
        </div>
    </div>
</div>






