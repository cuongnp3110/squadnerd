@model WE_Project.Models.account

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Profile</h6>
            </div>
            <div class="card-body">
                <div style="display: flex; justify-content: center;">
                    @if (Model.img != null)
                    {
                        <img src="@Url.Action("show","accounts", new { id = Model.account_id })" alt="Avatar" style="width:250px; height:250px ; border-radius: 50%; border: 2px; border-style: solid;">
                    }
                    else
                    {
                        <img src="~/img/boy.png" alt="Avatar" style="width:250px; border-radius: 50%; border: 2px; border-style: solid;">
                    }
                </div>
                <div class="form-group" style="display: flex; justify-content: center; padding-top: 20px;">
                    <b style="font-size:25px;font-weight:bold" for="exampleInputEmail1">@Html.DisplayFor(model => model.fname)</b>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Email: @Html.DisplayFor(model => model.email) </b>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Role: @ViewBag.state </b>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Position: @Html.DisplayFor(model => model.position)</b>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Department: @Html.DisplayFor(model => model.department.department_name)</b>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Sex: @ViewBag.gender</b>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" style="display: flex; justify-content: center;">
                            <b class="form-control" for="exampleInputEmail1">Phone: @Html.DisplayFor(model => model.phone)</b>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 " style="text-align: center; ">
                        <a href="@Url.Action("Edit", "accounts", new { id = Model.account_id, s = 1})" class="btn btn-primary"> Edit Profile </a>
                        <a href="@Url.Action("ChangePassword", "accounts", new { id = Model.account_id})" class="btn btn-primary"> Change Password </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

