@model WE_Project.Models.topic

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.topic_id)
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-6">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Edit topic</h6>
                    @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
                    {
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    }
                </div>
                <div class="card-body">
                    <form>

                        <div class="form-group">
                            <label>Topic Name</label>
                            @Html.EditorFor(model => model.topic_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.topic_name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            @Html.EditorFor(model => model.describe, new { htmlAttributes = new { @class = "form-control ", @value = ViewBag.close } })
                            @Html.ValidationMessageFor(model => model.describe, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Closure Date</label>
                            @Html.EditorFor(model => model.closure_date, new { htmlAttributes = new { @class = "form-control ", @value = ViewBag.final } })
                            @Html.ValidationMessageFor(model => model.closure_date, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Final Date</label>
                            @Html.EditorFor(model => model.final_date, new { htmlAttributes = new { @class = "form-control " } })
                            @Html.ValidationMessageFor(model => model.final_date, "", new { @class = "text-danger" })
                        </div>

