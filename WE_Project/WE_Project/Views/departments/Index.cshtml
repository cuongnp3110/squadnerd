@model IEnumerable<WE_Project.Models.department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Category</h6>
            @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
        </div>
        <div class="table-responsive p-3">
            <table class="table align-items-center table-flush table-hover" id="dataTableHover">
                <thead class="thead-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.department_name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.department_name)
                            </td>
                            <td>
                                <div></div>
                                <a href="@Url.Action("Edit", "departments", new { id = item.department_id})">
                                    <i class="fas fa-edit"></i>
                                </a>
                                &nbsp;&nbsp;
                                <a href="@Url.Action("Delete", "departments", new { id = item.department_id})" onclick="return confirm('Are you sure to delete this department?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
