@model WE_Project.Models.account

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-6">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Change password</h6>
                    @if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage !=  "")
                    {
                        <div class="text-danger">@ViewBag.ErrorMessage</div>
                    }
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group" hidden>
                            <label>ID</label>
                            <input class="form-control" id="accountID" type="text" value="@ViewBag.id" />
                        </div>

                        <div class="form-group">
                            <label>Current password</label>
                            <input class="form-control" id="Current" type="password" value="" />

                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" id="Pass1" onchange="PassCheck1()" />
                        </div>
                        <div class="form-group">
                            <label>Confirm password</label>
                            <input type="password" class="form-control" id="Confirm1" onchange="PassCheck1()" />
                        </div>

                        <input type="submit" onclick="changePass()" value="Save" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
